%body.tamu
  %h1 Editing Review
  = render 'form', review: @review
  = link_to 'Show', @review, data: { confirm: 'Are you sure you want to continue without saving?' }
  |
  -if flash[:back] == 'index'
    .tamuForeground= link_to 'Back', reviews_path, data: { confirm: 'Are you sure you want to continue without saving?' }
  -else
    .tamuForeground= link_to 'Back', review_list_path, data: {confirm: 'Are you sure you want to continue without saving?'}
