%p#notice= notice

%h1.tamuForeground Create a New Apartment

= render 'form'

%br.tamu

%h1.tamuForeground Listing Apartments

.tamu
  %table{:class => "table"}
    %thead
      %th
      %th
      %th
      %th
      %th

    %tbody
      -@apartments.each do |apartment|
        %tr
          %td= apartment.name
          %td= "Number of Reviews: #{apartment.review_count}"
          %td= link_to 'Show', apartment
          %td= link_to 'Edit', edit_apartment_path(apartment)
          %td= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' }
        %tr
          %td{:colspan => "5"}= "Description: #{apartment.description}"
  %br
  = link_to 'Back', admin_only_path
