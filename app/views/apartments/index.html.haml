%p#notice= notice

=render :partial => "/partials/loginbutton"

%h1 Apartments

= render :partial => "/partials/addreviewbutton"
= render :partial => "/partials/showpreviousreviews"
= render :partial => "searchbar"


%table
  %thead
    %tr
      %th{:colspan => "3"}
  %tbody
    - @apartments.each do |apartment|
      %tr
        %td= "#{apartment.name} (#{apartment.review_count} reviews)"
        %td= link_to 'Show', apartment
        %td= link_to 'Edit', edit_apartment_path(apartment)
        %td= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Apartment', new_apartment_path
