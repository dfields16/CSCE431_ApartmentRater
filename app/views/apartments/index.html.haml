=render :partial => "/partials/loginbutton"
=render :partial => "partials/header"

//middle grey bar in loFi
%div{:class => "container"}
  %div{:class => "row", :style => "text-align: center"}
    %div{:class => "col-xs-4"}
      = render :partial => "/partials/addreviewbutton"
    %div{:class => "col-xs-4"}
      = render :partial => "searchbar"
    %div{:class => "col-xs-4"}
      = render :partial => "/partials/showpreviousreviews"
  %div{:class => "row", :style => "text-align: center"}
    %div{:class => "col-xs-4"}
      = render :partial => "/partials/addapartmentbutton"
    %div{:class => "col-xs-4"}
      = render :partial => "/partials/addtagbutton"
    %div{:class => "col-xs-4"}
      = render :partial => "/partials/addamenitybutton"
  %div{:class => "row", :style => "text-align: center"}
    %div{:class => "col-xs-4"}
    %div{:class => "col-xs-4"}
      = render :partial => "/partials/addmetricbutton"
    %div{:class => "col-xs-4"}

%hr

%div{:class => "container"}
-@apartments.each do |apartment|
  %div{:class => "row"}
  %div{:class => "col-xs-3"}
    %img{:src => "/assets/stock_apartment.jpg", :class=>"img-thumbnail" }
  %div{:class => "col-xs-9"}
    %br
    %a{ :href => "apartments/#{apartment.id}"}
      %strong
        %h3= "#{apartment.name}"
    %p= "Average overall rating: #{apartment.average_rating} from #{apartment.review_count} reviews"
    %p
      %strong Description:
    %p= "#{apartment.description}"
    %p
      %strong{ :style => "float:left; padding: 2px;" } Tags:
      -apartment.get_tags.each do |tag, count|
        %div.tag{ :style => "float:left;padding: 0px 5px;border-radius: 25px; border: 2px solid #73AD21;margin-left: 2px;" }
          ="#{tag} #{count}"
    -# %p= link_to 'Edit', edit_apartment_path(apartment)
    -# %p= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' }

