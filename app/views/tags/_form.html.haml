= form_for @tag do |f|
  - if @tag.errors.any?
    #error_explanation
      %h2.tamu= "#{pluralize(@tag.errors.count, "error")} prohibited this tag from being saved:"
      %ul
        - @tag.errors.full_messages.each do |message|
          %li= message
    %div{:class => "container", :align => "center"}
      %div.row
        %h1{:style => "font-size: 30;"}= "Admin Portal"
      %div.row.center-block
        .tamuForeground
          .field
            = f.label :name
            = f.text_field :name
          .miscButton
            .actions
            = f.submit 'Save'