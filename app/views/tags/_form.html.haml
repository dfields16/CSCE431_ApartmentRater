%body.tamu
  = form_for @tag do |f|
    - if @tag.errors.any?
      #error_explanation
        %h2= "#{pluralize(@tag.errors.count, "error")} prohibited this tag from being saved:"
        %ul
          - @tag.errors.full_messages.each do |message|
            %li= message
    .tamuForeground
      %div{:class => "container", :align => "center"}
        %div.row.center-block
          %div.col-md-4
            .field
              = f.label :name
              = f.text_field :name
          %div.col-md-4
            .actions
              .miscButton= f.submit 'Save'
