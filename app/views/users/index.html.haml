%body.tamu
  %p#notice= notice

  %h1.tamu Listing users

  .tamuForeground
    %table{:class => "table"}
      %thead
        %tr
          %th Email
          %th
          %th
          %th
          %th
      %tbody
        - @users.each do |user|
          %tr
            %td= user.email
            -if user.is_admin
              %td Admin
            -else
              %td
            %td= link_to 'Edit', edit_user_path(user)
            -if user.is_admin
              %td
              %td
            -else
              %td= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }
              %td= link_to 'Give Admin Privileges', add_admin_path(id: user.id)
    %br
  .tamu= link_to 'Back', admin_only_path
