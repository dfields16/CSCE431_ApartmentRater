%body{class: "loginBody"}
%div{class: "bigbox"}
  %h1{} Login
  = form_tag sessions_path, :id => 'login' do |form|
    %div{class: "box"}
      = text_field_tag :email, nil, placeholder: "Email"

    %div{class: "box"}
      = password_field_tag :password, nil, placeholder: "Password"

  %div{class: "box"}
    = submit_tag "Login", form: "login"
  %div{class: "box"}
    = button_to 'Back', root_path, :method => :get

%div
  -if notice != nil
    %p{class: "popup"}= notice